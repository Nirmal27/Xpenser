@page "/ManageCategory"
@page "/ManageCategory/{PageId:long}"
<ConentPanel PanelTitle=@PageHeader>
    <RightSesction>
        <button @onclick="SaveData" class="btn btn-primary">
            <span class="oi oi-plus" aria-hidden="true"></span> Save
        </button>
        &nbsp;&nbsp;
        <NavLink class="btn btn-primary" href="PropContactsList">
            <span class="oi oi-x" aria-hidden="true"></span>
            Close
        </NavLink>
    </RightSesction>
    <PanelContent>
        <div class="col-12">
            @if (PageObj == null)
            {
                <p><em>Loading...</em></p>
            }
            else
            {
                <EditForm Model="@PageObj" OnValidSubmit="@SaveData">
                    <DataAnnotationsValidator />
                    <fieldset>
                        <CardBody>
                            <Fields>
                                <Validation Validator="@ValidationRule.IsNotEmpty">
                                    <Field Horizontal="true" ColumnSize="ColumnSize.Is6.OnDesktop">
                                        <FieldLabel ColumnSize="ColumnSize.Is3">Category Name</FieldLabel>
                                        <FieldBody ColumnSize="ColumnSize.Is9">
                                            <input class="form-control" @bind="PageObj.CategoryName" placeholder="Category Name" />
                                        </FieldBody>
                                    </Field>
                                </Validation>
                                <Validation Validator="@ValidationRule.IsNotEmpty">
                                    <Field Horizontal="true" ColumnSize="ColumnSize.Is6.OnDesktop">
                                        <FieldLabel ColumnSize="ColumnSize.Is3">Description</FieldLabel>
                                        <FieldBody ColumnSize="ColumnSize.Is9">
                                            <input class="form-control" @bind="PageObj.CategoryDescription" placeholder="Description" />
                                        </FieldBody>
                                    </Field>
                                </Validation>
                            </Fields>
                        </CardBody>
                    </fieldset>
                </EditForm>
            }

        </div>
    </PanelContent>
</ConentPanel>
